<div class="trail-header">
  <ul>
    <li class="trail-name"><%= @trail.name %></li>
  </ul>
</div>

<div class="comment-form">
<%= form_for @comment do |f| %>
  <p>
    <%= f.text_area :content %>
    <%= f.hidden_field :trail_id, :value => params[:id] %>
  </p>
  <p>
    <%= f.submit 'Share' %>
  </p>
<% end %>
</div>

<div class="river">
<%= render 'river', :comments => @comments %>
</div>
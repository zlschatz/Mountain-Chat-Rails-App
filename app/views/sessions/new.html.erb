<div>
<h3>Returning Users:</h3>
<%= form_tag sessions_path do |f| %>

  <div>
  Username: <%= text_field_tag :name %>
  </div>

  <div>
  Email: <%= email_field_tag :email %>
  </div>

  <div>
  Password: <%= password_field_tag :password %>
  </div>

  <div>
  <%= submit_tag 'Log In'%>
  </div>

<% end %>
</div>

<div>
<h3>New Users:</h3>
<%= form_for User.new do |f| %>

  <div>
  Username: <%= text_field_tag :name %>
  </div>

  <div>
  Email: <%= email_field_tag :email %>
  </div>

  <div>
  Password: <%= password_field_tag :password %>
  </div>

  <div>
  <%= f.submit 'Create Account'%>
  </div>

<% end %>
</div>
<h2>Login:</h2>
<%= form_tag sessions_path do |f| %>

  <div>
  <%= f.label :name %>:
  <%= f.text_field :name %>
  </div>

  <div>
  <%= f.label :email %>
  <%= f.text_field :email %>
  </div>

  <div>
  <%= f.label :password %>
  <%= f.password_field :password %>
  </div>

  <%= f.submit 'Log In'%>

<% end %>
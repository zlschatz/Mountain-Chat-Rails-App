<!DOCTYPE html>
<html>
<head>
  <title>Mountain Chat</title>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

</head>
<body>
<nav class="top-nav">
  <h1>Mountain Chat</h1>
</nav>

<div class="main-container">
<%= yield %>
</div>

<footer class="bottom-banner">
  <ul>
    <% if current_user %>
      <li>Home</li>
      <li>Star</li>
      <li>Messages</li>
      <li>Profile</li>
      <li><%= link_to("Log Out", session_path(current_user), method: :delete) %></li>
    <% else %>
      <li><%= link_to 'Login', new_session_path %></li>
      <li>||</li>
      <li><%= link_to 'Signup', new_user_path %></li>
    <% end %>
  </ul>
</footer>
</body>
</html>

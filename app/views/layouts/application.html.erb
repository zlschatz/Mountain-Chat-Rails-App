<!DOCTYPE html>
<html>
<head>
  <title>Mountain Chat</title>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

</head>
<body>
<header class="top-banner">
  <h1>Mountain Chat Header</h1>
</header>
<%= yield %>

<footer class="bottom-banner">
  <ul>
    <% if current_user %>
      <li>Welcome, <%= current_user.name %></li>
    <% else %>
      <li><%= link_to 'Login', new_session_path %></li>
      <li>||</li>
      <li><%= link_to 'Signup', new_user_path %></li>
    <% end %>
  </ul>
</footer>
</body>
</html>
